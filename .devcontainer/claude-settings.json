{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/local/bin/notify.sh 'Slug Max' 'Waiting for input' 'high' 'bell'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/usr/local/bin/notify.sh 'Slug Max' 'Task complete' 'default' 'white_check_mark'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat /workspace/.claude/rules.txt 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat /workspace/.claude/rules.txt 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
