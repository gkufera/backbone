generator client {
  provider = "prisma-client-js"
  output   = "../backend/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MemberRole {
  ADMIN
  DECIDER
  MEMBER
}

enum ScriptStatus {
  UPLOADING
  PROCESSING
  REVIEWING
  READY
  RECONCILING
  ERROR
}

enum ElementType {
  CHARACTER
  LOCATION
  OTHER
}

enum ElementStatus {
  ACTIVE
  ARCHIVED
}

enum ElementSource {
  AUTO
  MANUAL
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  PDF
  LINK
}

enum OptionStatus {
  ACTIVE
  ARCHIVED
}

enum ApprovalDecision {
  APPROVED
  REJECTED
  MAYBE
}

enum ElementWorkflowState {
  PENDING
  OUTSTANDING
  APPROVED
}

enum NotificationType {
  OPTION_READY
  OPTION_APPROVED
  OPTION_REJECTED
  OPTION_MAYBE
  MEMBER_INVITED
  SCRIPT_UPLOADED
  TENTATIVE_APPROVAL
  TENTATIVE_CONFIRMED
  NOTE_ADDED
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  passwordHash  String   @map("password_hash")
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  emailNotificationsEnabled Boolean @default(true) @map("email_notifications_enabled")

  createdProductions      Production[]             @relation("CreatedProductions")
  productionMembers       ProductionMember[]
  uploadedScripts         Script[]
  uploadedOptions         Option[]                 @relation("UploadedOptions")
  approvals               Approval[]
  notifications           Notification[]
  notes                   Note[]
  directorNotes           DirectorNote[]
  passwordResetTokens     PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]

  @@map("users")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("password_reset_tokens")
}

model EmailVerificationToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("email_verification_tokens")
}

model Production {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdById String   @map("created_by_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  createdBy      User               @relation("CreatedProductions", fields: [createdById], references: [id])
  members        ProductionMember[]
  scripts        Script[]
  departments    Department[]
  notifications  Notification[]

  @@map("productions")
}

model ProductionMember {
  id           String     @id @default(cuid())
  productionId String     @map("production_id")
  userId       String     @map("user_id")
  role         MemberRole @default(MEMBER)
  title        String?
  departmentId String?    @map("department_id")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  production   Production  @relation(fields: [productionId], references: [id])
  user         User        @relation(fields: [userId], references: [id])
  department   Department? @relation(fields: [departmentId], references: [id])

  @@unique([productionId, userId])
  @@map("production_members")
}

model Script {
  id             String       @id @default(cuid())
  productionId   String       @map("production_id")
  title          String
  fileName       String       @map("file_name")
  s3Key          String       @map("s3_key")
  pageCount      Int?         @map("page_count")
  status         ScriptStatus @default(UPLOADING)
  version        Int          @default(1)
  parentScriptId String?      @map("parent_script_id")
  uploadedById   String       @map("uploaded_by_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  sceneData      Json?            @map("scene_data")

  production      Production       @relation(fields: [productionId], references: [id])
  uploadedBy      User             @relation(fields: [uploadedById], references: [id])
  parentScript    Script?          @relation("ScriptVersions", fields: [parentScriptId], references: [id])
  childScripts    Script[]         @relation("ScriptVersions")
  elements        Element[]
  revisionMatches RevisionMatch[]
  directorNotes   DirectorNote[]

  @@map("scripts")
}

model Element {
  id             String               @id @default(cuid())
  scriptId       String               @map("script_id")
  name           String
  type           ElementType          @default(OTHER)
  highlightPage  Int?                 @map("highlight_page")
  highlightText  String?              @map("highlight_text")
  departmentId   String?              @map("department_id")
  status         ElementStatus        @default(ACTIVE)
  source         ElementSource        @default(AUTO)
  workflowState  ElementWorkflowState @default(PENDING) @map("workflow_state")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")

  script          Script          @relation(fields: [scriptId], references: [id])
  department      Department?     @relation(fields: [departmentId], references: [id])
  options         Option[]
  notes           Note[]
  revisionMatches RevisionMatch[]

  @@map("elements")
}

model Option {
  id              String       @id @default(cuid())
  elementId       String       @map("element_id")
  mediaType       MediaType    @map("media_type")
  description     String?
  s3Key           String?      @map("s3_key")
  fileName        String?      @map("file_name")
  externalUrl     String?      @map("external_url")
  thumbnailS3Key  String?      @map("thumbnail_s3_key")
  status          OptionStatus @default(ACTIVE)
  readyForReview  Boolean      @default(false) @map("ready_for_review")
  uploadedById    String       @map("uploaded_by_id")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  element         Element      @relation(fields: [elementId], references: [id])
  uploadedBy      User         @relation("UploadedOptions", fields: [uploadedById], references: [id])
  approvals       Approval[]
  notes           Note[]

  @@map("options")
}

model Approval {
  id        String           @id @default(cuid())
  optionId  String           @map("option_id")
  userId    String           @map("user_id")
  decision  ApprovalDecision
  note      String?
  tentative Boolean          @default(false)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  option    Option           @relation(fields: [optionId], references: [id])
  user      User             @relation(fields: [userId], references: [id])

  @@map("approvals")
}

model Department {
  id           String             @id @default(cuid())
  productionId String             @map("production_id")
  name         String
  color        String?            @map("color")
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  production   Production         @relation(fields: [productionId], references: [id])
  members      ProductionMember[]
  elements     Element[]

  @@unique([productionId, name])
  @@map("departments")
}


enum RevisionMatchStatus {
  EXACT
  FUZZY
  NEW
  MISSING
}

model RevisionMatch {
  id                     String              @id @default(cuid())
  newScriptId            String              @map("new_script_id")
  detectedName           String              @map("detected_name")
  detectedType           ElementType         @map("detected_type")
  detectedPage           Int?                @map("detected_page")
  detectedHighlightText  String?             @map("detected_highlight_text")
  matchStatus            RevisionMatchStatus @map("match_status")
  oldElementId           String?             @map("old_element_id")
  similarity             Float?
  userDecision           String?             @map("user_decision")
  resolved               Boolean             @default(false)
  createdAt              DateTime            @default(now()) @map("created_at")
  updatedAt              DateTime            @updatedAt @map("updated_at")

  newScript     Script              @relation(fields: [newScriptId], references: [id])
  oldElement    Element?            @relation(fields: [oldElementId], references: [id])

  @@map("revision_matches")
}

model Note {
  id           String   @id @default(cuid())
  content      String
  userId       String   @map("user_id")
  elementId    String?  @map("element_id")
  optionId     String?  @map("option_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User     @relation(fields: [userId], references: [id])
  element      Element? @relation(fields: [elementId], references: [id])
  option       Option?  @relation(fields: [optionId], references: [id])

  @@map("notes")
}

model Notification {
  id           String           @id @default(cuid())
  userId       String           @map("user_id")
  productionId String           @map("production_id")
  type         NotificationType
  message      String
  link         String?
  read         Boolean          @default(false)
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")

  user         User             @relation(fields: [userId], references: [id])
  production   Production       @relation(fields: [productionId], references: [id])

  @@index([userId, productionId, read])
  @@map("notifications")
}

model DirectorNote {
  id          String    @id @default(cuid())
  scriptId    String    @map("script_id")
  sceneNumber Int       @map("scene_number")
  note        String
  createdById String    @map("created_by_id")
  deletedAt   DateTime? @map("deleted_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  script      Script    @relation(fields: [scriptId], references: [id])
  createdBy   User      @relation(fields: [createdById], references: [id])

  @@index([scriptId, deletedAt])
  @@map("director_notes")
}
