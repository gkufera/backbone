generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DIRECTOR
  DEPARTMENT_HEAD
  CONTRIBUTOR
  ASSISTANT
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum ScriptStatus {
  UPLOADING
  PROCESSING
  READY
  ERROR
}

enum ElementType {
  CHARACTER
  LOCATION
  OTHER
}

enum ElementStatus {
  ACTIVE
  ARCHIVED
}

enum ElementSource {
  AUTO
  MANUAL
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  PDF
  LINK
}

enum OptionStatus {
  ACTIVE
  ARCHIVED
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  role         Role     @default(CONTRIBUTOR)
  departmentId String?  @map("department_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  createdProductions  Production[]       @relation("CreatedProductions")
  productionMembers   ProductionMember[]
  uploadedScripts     Script[]
  uploadedOptions     Option[]           @relation("UploadedOptions")

  @@map("users")
}

model Production {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdById String   @map("created_by_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  createdBy   User               @relation("CreatedProductions", fields: [createdById], references: [id])
  members     ProductionMember[]
  scripts     Script[]

  @@map("productions")
}

model ProductionMember {
  id           String     @id @default(cuid())
  productionId String     @map("production_id")
  userId       String     @map("user_id")
  role         MemberRole @default(MEMBER)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  production   Production @relation(fields: [productionId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@unique([productionId, userId])
  @@map("production_members")
}

model Script {
  id           String       @id @default(cuid())
  productionId String       @map("production_id")
  title        String
  fileName     String       @map("file_name")
  s3Key        String       @map("s3_key")
  pageCount    Int?         @map("page_count")
  status       ScriptStatus @default(UPLOADING)
  uploadedById String       @map("uploaded_by_id")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  production   Production   @relation(fields: [productionId], references: [id])
  uploadedBy   User         @relation(fields: [uploadedById], references: [id])
  elements     Element[]

  @@map("scripts")
}

model Element {
  id          String        @id @default(cuid())
  scriptId    String        @map("script_id")
  name        String
  type        ElementType   @default(OTHER)
  pageNumbers Int[]         @map("page_numbers")
  status      ElementStatus @default(ACTIVE)
  source      ElementSource @default(AUTO)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  script      Script        @relation(fields: [scriptId], references: [id])
  options     Option[]

  @@map("elements")
}

model Option {
  id              String       @id @default(cuid())
  elementId       String       @map("element_id")
  mediaType       MediaType    @map("media_type")
  description     String?
  s3Key           String?      @map("s3_key")
  fileName        String?      @map("file_name")
  externalUrl     String?      @map("external_url")
  thumbnailS3Key  String?      @map("thumbnail_s3_key")
  status          OptionStatus @default(ACTIVE)
  readyForReview  Boolean      @default(false) @map("ready_for_review")
  uploadedById    String       @map("uploaded_by_id")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  element         Element      @relation(fields: [elementId], references: [id])
  uploadedBy      User         @relation("UploadedOptions", fields: [uploadedById], references: [id])

  @@map("options")
}
