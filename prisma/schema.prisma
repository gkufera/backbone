generator client {
  provider = "prisma-client-js"
  output   = "../backend/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum ScriptStatus {
  UPLOADING
  PROCESSING
  READY
  RECONCILING
  ERROR
}

enum ElementType {
  CHARACTER
  LOCATION
  OTHER
}

enum ElementStatus {
  ACTIVE
  ARCHIVED
}

enum ElementSource {
  AUTO
  MANUAL
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  PDF
  LINK
}

enum OptionStatus {
  ACTIVE
  ARCHIVED
}

enum ApprovalDecision {
  APPROVED
  REJECTED
  MAYBE
}

enum ElementWorkflowState {
  PENDING
  OUTSTANDING
  APPROVED
}

enum NotificationType {
  OPTION_READY
  OPTION_APPROVED
  OPTION_REJECTED
  OPTION_MAYBE
  MEMBER_INVITED
  SCRIPT_UPLOADED
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  createdProductions  Production[]       @relation("CreatedProductions")
  productionMembers   ProductionMember[]
  uploadedScripts     Script[]
  uploadedOptions     Option[]           @relation("UploadedOptions")
  approvals           Approval[]
  notifications       Notification[]

  @@map("users")
}

model Production {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdById String   @map("created_by_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  createdBy      User               @relation("CreatedProductions", fields: [createdById], references: [id])
  members        ProductionMember[]
  scripts        Script[]
  departments    Department[]
  notifications  Notification[]

  @@map("productions")
}

model ProductionMember {
  id           String     @id @default(cuid())
  productionId String     @map("production_id")
  userId       String     @map("user_id")
  role         MemberRole @default(MEMBER)
  title        String?
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  production        Production         @relation(fields: [productionId], references: [id])
  user              User               @relation(fields: [userId], references: [id])
  departmentMembers DepartmentMember[]

  @@unique([productionId, userId])
  @@map("production_members")
}

model Script {
  id             String       @id @default(cuid())
  productionId   String       @map("production_id")
  title          String
  fileName       String       @map("file_name")
  s3Key          String       @map("s3_key")
  pageCount      Int?         @map("page_count")
  status         ScriptStatus @default(UPLOADING)
  version        Int          @default(1)
  parentScriptId String?      @map("parent_script_id")
  uploadedById   String       @map("uploaded_by_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  production      Production       @relation(fields: [productionId], references: [id])
  uploadedBy      User             @relation(fields: [uploadedById], references: [id])
  parentScript    Script?          @relation("ScriptVersions", fields: [parentScriptId], references: [id])
  childScripts    Script[]         @relation("ScriptVersions")
  elements        Element[]
  revisionMatches RevisionMatch[]

  @@map("scripts")
}

model Element {
  id             String               @id @default(cuid())
  scriptId       String               @map("script_id")
  name           String
  type           ElementType          @default(OTHER)
  pageNumbers    Int[]                @map("page_numbers")
  status         ElementStatus        @default(ACTIVE)
  source         ElementSource        @default(AUTO)
  workflowState  ElementWorkflowState @default(PENDING) @map("workflow_state")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")

  script          Script          @relation(fields: [scriptId], references: [id])
  options         Option[]
  revisionMatches RevisionMatch[]

  @@map("elements")
}

model Option {
  id              String       @id @default(cuid())
  elementId       String       @map("element_id")
  mediaType       MediaType    @map("media_type")
  description     String?
  s3Key           String?      @map("s3_key")
  fileName        String?      @map("file_name")
  externalUrl     String?      @map("external_url")
  thumbnailS3Key  String?      @map("thumbnail_s3_key")
  status          OptionStatus @default(ACTIVE)
  readyForReview  Boolean      @default(false) @map("ready_for_review")
  uploadedById    String       @map("uploaded_by_id")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  element         Element      @relation(fields: [elementId], references: [id])
  uploadedBy      User         @relation("UploadedOptions", fields: [uploadedById], references: [id])
  approvals       Approval[]

  @@map("options")
}

model Approval {
  id        String           @id @default(cuid())
  optionId  String           @map("option_id")
  userId    String           @map("user_id")
  decision  ApprovalDecision
  note      String?
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  option    Option           @relation(fields: [optionId], references: [id])
  user      User             @relation(fields: [userId], references: [id])

  @@map("approvals")
}

model Department {
  id           String             @id @default(cuid())
  productionId String             @map("production_id")
  name         String
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  production   Production         @relation(fields: [productionId], references: [id])
  members      DepartmentMember[]

  @@unique([productionId, name])
  @@map("departments")
}

model DepartmentMember {
  id                 String           @id @default(cuid())
  departmentId       String           @map("department_id")
  productionMemberId String           @map("production_member_id")
  createdAt          DateTime         @default(now()) @map("created_at")

  department         Department       @relation(fields: [departmentId], references: [id])
  productionMember   ProductionMember @relation(fields: [productionMemberId], references: [id])

  @@unique([departmentId, productionMemberId])
  @@map("department_members")
}

enum RevisionMatchStatus {
  EXACT
  FUZZY
  NEW
  MISSING
}

model RevisionMatch {
  id            String              @id @default(cuid())
  newScriptId   String              @map("new_script_id")
  detectedName  String              @map("detected_name")
  detectedType  ElementType         @map("detected_type")
  detectedPages Int[]               @map("detected_pages")
  matchStatus   RevisionMatchStatus @map("match_status")
  oldElementId  String?             @map("old_element_id")
  similarity    Float?
  userDecision  String?             @map("user_decision")
  resolved      Boolean             @default(false)
  createdAt     DateTime            @default(now()) @map("created_at")
  updatedAt     DateTime            @updatedAt @map("updated_at")

  newScript     Script              @relation(fields: [newScriptId], references: [id])
  oldElement    Element?            @relation(fields: [oldElementId], references: [id])

  @@map("revision_matches")
}

model Notification {
  id           String           @id @default(cuid())
  userId       String           @map("user_id")
  productionId String           @map("production_id")
  type         NotificationType
  message      String
  link         String?
  read         Boolean          @default(false)
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")

  user         User             @relation(fields: [userId], references: [id])
  production   Production       @relation(fields: [productionId], references: [id])

  @@index([userId, productionId, read])
  @@map("notifications")
}
